generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma/client"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid())
  name           String
  email          String   @unique
  passwordHash   String
  imageUrl       String?   @default(null)
  createdAt      DateTime @default(now())
}

